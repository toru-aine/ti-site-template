			"url":  "git@bitbucket.org:toruinteractive/ti-image.git"
		},
		{
			"type": "git",
			"url":  "git@bitbucket.org:toruinteractive/ti-login.git"
		},
		{
			"type": "git",
			"url":  "git@bitbucket.org:toruinteractive/ti-navbar.git"
		},
		{
			"type": "git",
			"url":  "git@bitbucket.org:toruinteractive/ti-search.git"
		},
		{
			"type": "git",
			"url":  "git@bitbucket.org:toruinteractive/ti-translator.git"
		},
		{
			"type": "git",
			"url":  "git@bitbucket.org:toruinteractive/ti-tree.git"
		},
		{
			"type": "git",
			"url":  "git@bitbucket.org:toruinteractive/ti-slides.git"
		},
		{

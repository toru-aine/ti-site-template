{
	"name": "toruinteractive/ti-site-template",
	"description": "A basic template for Toru Interactive sites.",
	"version": "0.0.1",
	"homepage": "http://www.toruinteractive.com",
	"minimum-stability": "stable",
	"require": {
		"php": ">=5.4.0",
		"yiisoft/yii2-bootstrap": "2.0.*",
		"yiisoft/yii2-jui" :"2.0.*",
		"yiisoft/yii2-swiftmailer": "2.0.*",
		"yiisoft/yii2": "2.0.*",
		"yiisoft/yii2-apidoc": "2.0.*",
		"yiisoft/yii2-authclient" : "2.0.*",

		"toruinteractive/ti-cms": "0.10.35",
		"frostealth/yii2-aws-s3": "~1.0@stable"
	},
	"require-dev": {
		"yiisoft/yii2-codeception": "*",
		"yiisoft/yii2-debug": "*",
		"yiisoft/yii2-gii": "*",
		"yiisoft/yii2-faker": "*"
	},
	"config": {
		"process-timeout": 1800,
		"vendor-dir": "../vendor"
	},
	"extra": {
		"asset-installer-paths": {
			"bower-asset-library": "../vendor/bower"
		},
		"require-bower":{
			"angular-bootstrap": "*"
		}
	},
	"repositories": [
		{
			"type": "git",
			"url":  "git@bitbucket.org:toruinteractive/ti-cms.git"
		},
		{
